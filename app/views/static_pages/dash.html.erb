<div class="centered-content">
  <%= render "partials/top_nav" %>
  <%= render "partials/errors" %>
</div>

<div class="backdrop container-fluid">
  <div class="center-wrapper clearfix">
    <div id="content-panel"></div>
    <% if logged_in? %>
      <div class="side-panel">
        <%= render 'partials/dash_panel' %>
      </div>
    <% end %>
  </div>
</div>

<script>
  $(function () {
    var router = new Allonsy.Router({ $rootEl: $('#content-panel') });
    router.feedShow();
  });
</script>
