<div class="cover-page-backdrop">
  <div class="signup-form-container">
    <%= image_tag 'logo.png' %>
    <form action="<%= session_url %>" method="POST" role="form">
      <%= csrf_token %>

      <div class="unpadded-input-group">
        <div class="form-group">
          <input type="email"
                 class="form-control"
                 id="user-email"
                 name="user[email]"
                 placeholder="Email"
                 value="<%= @user.email %>">
        </div>

        <div class="form-group">
          <input type="password"
                 class="form-control"
                 id="user-password"
                 placeholder="Password"
                 name="user[password]">
        </div>
      </div>

      <button type="submit"
              class="btn btn-primary form-control">Sign in</button>
      <%= link_to 'Sign in as guest',
                  session_guest_url,
                  method: :get,
                  class: 'form-control btn btn-success' %>
    </form>
  </div>

  <div class="signup-button-container">
    <%= link_to 'Sign up',
                  new_user_url,
                  method: :get,
                  class: 'btn btn-primary' %>
  </div>
</div>