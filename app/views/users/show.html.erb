<%= render 'partials/top_nav' %>
<%= render 'partials/errors' %>

<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <div class="pull-left">
        <%= render 'avatar', user: @user %>
      </div>
      <div class="pull-left">
        <h1 style="margin-left: 10px; margin-top: 44px">
          <%= @user.username %>
        </h1>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <h3>Blogs Owned</h3>
      <% if @user.blogs.count == 0 %>
        <p>User does not yet have any blogs.</p>
      <% end %>
    
      <% @user.blogs.each do |blog| %>
        <%= render 'blogs/nameplate', blog: blog %>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="col-md-12">
      <h3>Blogs Contributed To</h3>
      <% if @user.member_blogs.count == 0 %>
        <p>User is not a member of any blogs.</p>
      <% end %>
    
      <% @user.member_blogs.each do |blog| %>
        <%= render 'blogs/nameplate', blog: blog %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <h3>Following</h3>
      <% if @user.followed_blogs.count == 0 %>
        <p>User is not yet following any blogs.</p>
      <% end %>
    
      <% @user.followed_blogs.each do |blog| %>
        <%= render 'blogs/nameplate', blog: blog %>
      <% end %>
    </div>
  </div>
</div>