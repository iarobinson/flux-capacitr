<div class="panel panel-primary post-container">
  <div class="panel-heading">
    <h3 class="panel-title"><%= link_to post.title, post_url(post) %></h3>
  </div>
  
  <div class="panel-body">
    <%= post.body %>
  </div>
  
  <div class="panel-footer">
    <div class="post-info">
      <%= link_to post_url(post), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-time"></span>
        <%= time_ago_in_words(post.created_at) %> ago
      <% end %>

      <%= link_to post_url(post), class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-link"></span>
      <% end %>
    </div>
    
    <div class="post-controls">
      <% if current_user == post.author %>
        <%= link_to edit_post_url(post), class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-cog"></span>
        <% end %>
        <%= link_to post_url(post),
          method: :delete,
          class: "btn btn-default" do %>
            <span class="glyphicon glyphicon-trash"></span>
        <% end %>
      <% end %>
    </div> <!-- post-controls -->
  </div> <!-- panel-heading -->
</div> <!-- panel-default -->