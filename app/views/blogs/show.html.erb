<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="blog-header clearfix">
      <h1 class="pull-left"><%= @blog.title %></h1>
      <div class="blog-controls btn-group pull-right">
        <% if current_user == @blog.owner %>
          <%= link_to edit_blog_url(@blog), class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-cog"></span>
          <% end %>
          <%= link_to new_blog_post_url(@blog),
            class: "btn btn-default" do %>
              <span class="glyphicon glyphicon-pencil"></span>
          <% end %>
        <% end %>
      </div>
    </div>
    <hr style="margin-top: 10px">

    <div class="blog-posts">
      <% if @blog.posts.length > 0 %>
        <% @blog.posts.each do |post| %>
          <%= render 'posts/post', post: post %>
        <% end %>
      <% else %>
        <h4>There don't seem to be any posts here yet!</h4>
      <% end %>
    </div>
  </div>
</div>