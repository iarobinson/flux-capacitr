<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h1><%= @blog.title %></h1>
    <hr>

    <div class="blog-posts">
      <% @blog.posts.each do |post| %>
        <%= render 'posts/post', post: post %>
      <% end %>
    </div>
  </div>
</div>

<% if current_user == @blog.owner %>
  <hr>
  <%= button_to "Post to #{@blog.title}", new_blog_post_url(@blog), method: :get, class: 'btn btn-primary' %>
  <%= button_to "Edit #{@blog.title}", edit_blog_url(@blog), method: :get, class: 'btn btn-success'%>
<% end %>

