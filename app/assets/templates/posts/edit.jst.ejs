<div class="panel panel-primary post-container">
  <div class="panel-heading">
    <a href="#blogs/<%= post.get('blog_id') %>" class="panel-title">
      <%= post.get('blog_url') %>
    </a>
  </div>
  
  <div class="panel-body">
    <form class="post-edit">
      <div class="form-group">
        <label for="post-title">Post Title</label>
        <input type="text"
               id="post-title"
               name="post[title]"
               class="form-control"
               value="<%= post.get('title') %>">
      </div>
      
      <div class="form-group">
        <label for="post-body">Post Body</label>
        <textarea id="post-body"
                  class="form-control"
                  data-provide="markdown"
                  name="post[body]"><%= post.get('body') %></textarea>
      </div>
      
      <div class="form-group">
        <label for="post-tags">Post Tags</label>
        <input type="text"
               id="post-tags"
               class="form-control"
               name="post[tags]"><%= post.get('tags') %></input>
      </div>
      
      <button type="submit"
              class="btn btn-success pull-left"
              id="commit-edit">Save</button>
      <button type="button"
              class="btn btn-danger pull-right"
              id="cancel-edit">Cancel</button>
    </form>
  </div>
</div>