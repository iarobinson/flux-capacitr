<div class="panel panel-primary post-container">
  <div class="panel-heading clearfix">
    <a href="#blogs/<%= post.get('blog_id') %>"
       class="panel-title pull-left">
      <%= post.get('blog_url') %>
    </a>
    
    <div class="post-header-info pull-right">
      Liked <%= post.get('num_likes') %> times.
      <% if (!post.get('is_author')) { %>
        <a href="javascript:void(0)"
           class="btn btn-default btn-xs"
           id="like-toggle">
          <% if (post.get('is_liked')) { %>
            <span class="glyphicon glyphicon-thumbs-down"></span> Unlike
          <% } else { %>
            <span class="glyphicon glyphicon-thumbs-up"></span> Like
          <% } %>
        </a>
      <% } %>
    </div>
  </div>
  
  <div class="panel-body">
    <h3 style="margin-top: 0"><%= post.get('title') %></h3>
    <%= markdown.toHTML(post.get('body')) %>
    
    <% if (post.get('tags').length > 0) { %>
      <div class="post-tags">
        <strong>Tags:</strong>
        <ul class="inline-list">
          <% post.get('tags').forEach(function (tag) { %>
            <li><a href="javascript:void(0)"><%= tag %></a></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </div>
  
  <div class="panel-footer post-footer clearfix">  </div>
</div>