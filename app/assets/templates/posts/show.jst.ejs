<div class="panel panel-primary post-container">
  <div class="panel-heading">
    <a href="#blogs/<%= post.get('blog_id') %>" class="panel-title">
      <%= post.get('blog_url') %>
    </a>
  </div>
  
  <div class="panel-body">
    <h3 style="margin-top: 0"><%= post.get('title') %></h3>
    <%= markdown.toHTML(post.get('body')) %>
    
    <% if (post.get('tags').length > 0) { %>
      <div class="post-tags">
        <strong>Tags:</strong>
        <ul class="inline-list">
          <% post.get('tags').forEach(function (tag) { %>
            <li><a href="javascript:void(0)"><%= tag %></a></li>
          <% }) %>
        </ul>
      </div>
    <% } %>
  </div>
  
  <div class="panel-footer post-footer clearfix">  </div>
</div>